<h1>Where do you want it blank?</h1>

<table>
  <thead>
    <tr>
      <% @num_array.each do |index| %>
        <th style="text-align: center"><%=index%></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @letter_array.each do |letter| %>
        <td style="text-align: center"><%=letter%></td>
      <% end %>
    </tr>
  </tbody>
</table>



<%= simple_form_for [@deck, @card] do |f|  %>
  <%= f.input :first_index, collection: (0..@card.original.length) %>
  <%= f.input :second_index, collection: (0..@card.original.length) %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to cards",deck_cards_path(@deck)  %>
