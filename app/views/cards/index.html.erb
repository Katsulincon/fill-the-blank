<h1>cards index page</h1>

<% @cards.each do |card| %>
<h3>Input Sentence : <%= card.original %>　</h3>
<h3>Blanked Sentence : <%= card.sentence %>　</h3>
<h3>Blank/Answer : <%= card.answer %>　</h3>
<h2>----------------------</h2>
<% end %>



<h2>----------------------</h2>
<%= link_to "Add crad",new_deck_card_path(@deck)  %>
<% input = "I am Katsu" %>
<% input_array = input.split("") %>
<% num_array = (0..input.length - 1).to_a %>

<table>
  <thead>
    <tr>
      <% num_array.each do |index| %>
        <th style="text-align: center"><%=index%></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% input_array.each do |letter| %>
        <td style="text-align: center"><%=letter%></td>
      <% end %>
    </tr>
  </tbody>
</table>

